@model Jogador

@{
    ViewData["Title"] = "Jogador";
}

<h1>Tela de Jogadores</h1>

<form method="post" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
    
    <label for="">Nome</label>
    <input type="text" name="Nome">
    
    <label for="">e-mail</label>
    <input type="text" name="Email">

    <label for="">Imagem</label>
    <input type="file" name="Imagem">

    <select name="" id="">
        <option value="0">Selecione uma opção</option>
        
        @foreach (Equipe equipe in ViewBag.Equipe)
        {
            <option value="@equipe.IdEquipe">@equipe.Nome</option>
        }

    </select>

    <button type="submit">Cadastrar</button>
    

</form>

<table class="table table-striped table-responsive table-dark">
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Imagem</th>
        <th>Ações</th>
    </thead>

    <tbody>

        @foreach (Jogador jogador in ViewBag.Jogador)
        {
            <tr>
                <td>@jogador.IdEquipe</td>
                <td>@jogador.Nome</td>
                <td><img src="/img/equipes/@jogador.Equipe.Imagem" alt="Imagem da Equipe @jogador.Nome" width="50px"></td>
                
            </tr>
        }

    </tbody>
</table>
